<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sprzny.hunan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.hunan.weizhang.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hunan.weizhang.activity.ShortNameList" >
        </activity>
        <activity android:name="com.hunan.weizhang.activity.ProvinceList" >
        </activity>
        <activity android:name="com.hunan.weizhang.activity.CityList" >
        </activity>
        <activity android:name="com.hunan.weizhang.activity.WeizhangResult" >
        </activity>

        <service android:name="com.cheshouye.api.client.WeizhangIntentService" />

        <activity
            android:name="com.hunan.weizhang.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hunan.weizhang.activity.IndexActivity"
            android:label="@string/title_activity_index" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>