<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/csy_bg_body"
    tools:context="com.hunan.weizhang.activity.IndexActivity" >

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg_550"/>
    
    <RelativeLayout 
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/csy_btn_h"  
        android:layout_alignParentTop="true"
        android:background="@color/csy_red"
        android:paddingLeft="@dimen/csy_pd"
        android:paddingRight="@dimen/csy_pd" >  
    
        <ImageView 
                android:id="@+id/dingwei_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/dingwei" />

            <TextView
                android:id="@+id/dingwei_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/dingwei_icon"
                android:layout_toEndOf="@id/dingwei_icon"
                android:textSize="14sp"
                android:text="武汉"
                android:textColor="@android:color/white" />
    
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="18.0sp"
        android:textColor="@android:color/white" />    
     
    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/jia" 
                android:onClick="weizhangClick"/>
    
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/topBanner"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_below="@id/titlebar"
        android:background="@drawable/hubeibanner" >
    
        <RelativeLayout
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:visibility="invisible"
            android:background="@drawable/csy_weather_left" >

            <RelativeLayout
                android:id="@+id/weather_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/weather_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="16°C~18°C"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_tmp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/w_dabaoyu" />

                <TextView
                    android:id="@+id/weather_wenzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_tmp"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/weather_icon"
                    android:layout_toRightOf="@+id/weather_icon"
                    android:text="中雨"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/weather_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_wenzi"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/weather_icon"
                    android:layout_toRightOf="@+id/weather_icon"
                    android:background="@drawable/csy_weather_now"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="29 空气优"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@+id/weather_left"
                android:layout_toRightOf="@+id/weather_left"
                android:background="#8063B8FF"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:paddingRight="6dp" >
                
                <TextView android:id="@+id/xc_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="6dp"
                    android:text="星期二"
                    android:textColor="@android:color/white"
                    android:textSize="28sp" />
                
                <TextView android:id="@+id/xc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="2016年7月5日"
                    android:textColor="@android:color/white" />
                
                <TextView android:id="@+id/xc_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="不宜洗车"
                    android:textColor="@android:color/white"/>
                
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <GridView 
            android:id="@+id/icon_gview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topBanner"
            android:numColumns="4"    
            android:stretchMode="columnWidth"
            android:listSelector="@android:color/transparent"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        
    </GridView>
    
    <View android:id="@+id/silver_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/icon_gview"
            android:background="@color/silver" />
    
    <!-- 今日油价 -->
    <LinearLayout 
        android:id="@+id/today_oic_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/silver_view"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:paddingBottom="4dp"
            android:text="今日油价"/>
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/silver" 
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        
        <TextView 
            android:id="@+id/oic_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
        
    </LinearLayout>
    
    <!-- 查询历史列表 -->
    <ListView
        android:id="@+id/history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_oic_price"
        android:layout_marginTop="20dp"
        android:divider="#C0C0C0"   
        android:dividerHeight="1px"/>
    
</RelativeLayout>