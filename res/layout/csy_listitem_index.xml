<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" 
    android:background="@android:color/white">
    
    <TextView android:id="@+id/chepai_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@drawable/csy_chepai"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:text="湘A 2CdDE"/>
    
    <TextView 
        android:id="@+id/weizhangmessage_total_view"
        android:layout_toRightOf="@+id/chepai_view"
        android:layout_toEndOf="@+id/chepai_view" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="测试字符"/>
    
    <TextView 
        android:id="@+id/weizhangmessage_view"
        android:layout_toRightOf="@+id/chepai_view"
        android:layout_toEndOf="@+id/chepai_view" 
        android:layout_below="@+id/weizhangmessage_total_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="测试字符"/>

</RelativeLayout>
